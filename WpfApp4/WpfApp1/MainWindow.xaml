<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--Margin 设置控件与周围的边界 "左，上，右，下"-->
        <!--BorderBrush 边界颜色 BorderThickness 边框厚度-->
        <Label Margin="16,16,16,0"
               BorderBrush="Black"
               BorderThickness="1"
               >
            <StackPanel Orientation="Horizontal">
                <Image Source="https://pics.freeicons.io/uploads/icons/png/283439861606062169-512.png" Width="50"></Image>
                <Button Click="Button_Click" Margin="5,0,0,0">
                    <AccessText HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Text="Message (_a)" ToolTip="快捷键Alt+A"></AccessText>
                </Button>
                </StackPanel>
        </Label>
        <TextBox FontSize="35"  Margin="16"></TextBox>
    </StackPanel>
</Window>
